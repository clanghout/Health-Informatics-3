<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.layout.HBox?>
<Tab
		text="Analysis"
		fx:controller="controllers.AnalysisController"
		xmlns="http://javafx.com/javafx/8"
		xmlns:fx="http://javafx.com/fxml/1"
		>
	<content>
		<AnchorPane>
			<children>
				<HBox>
					<children>
						<VBox styleClass="analysis-buttons">
							<children>
								<Button text="Load"/>
								<Button text="Save"/>
								<Button text="Execute" onAction="#handleExecuteButtonAction"/>
							</children>
						</VBox>
						<VBox styleClass="analysis-spacing">
							<children>
								<TextFlow styleClass="analysis-text-out">
									<children>
										<TextArea styleClass="analysis-text" fx:id="userscript"/>
									</children>
								</TextFlow>
								<VBox styleClass="labels">
									<children>
										<Label fx:id="errorLabel"/>
										<VBox fx:id="errorBox" styleClass="labels"/>
									</children>
								</VBox>
							</children>
						</VBox>
					</children>
				</HBox>
			</children>
		</AnchorPane>
	</content>
</Tab>
