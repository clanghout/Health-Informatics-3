<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab fx:controller="controllers.VisualizationController" text="Visualization" xmlns="http://javafx.com/javafx/8"
     xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <AnchorPane>
            <children>
                <Button
                        fx:id="makeGraphButton"
                        styleClass="button"
                        layoutX="14.0"
                        layoutY="14.0"
                        onAction="#handlePopupButtonAction"
                        text="Make graph"/>
                <Button
                        fx:id="clearViewButton"
                        styleClass="button"
                        layoutX="94.0"
                        layoutY="14.0"
                        onAction="#handleClearButtonAction"
                        text="Clear graph"/>
                <Button
                        fx:id="saveButton"
                        styleClass="button"
                        layoutX="174.0"
                        layoutY="14.0"
                        onAction="#handleSaveButtonAction"
                        text="Save graph"/>

                <VBox fx:id="visualizationGraph" styleClass="visualization-graph" layoutX="14.0" layoutY="42.0">

                </VBox>
            </children>
        </AnchorPane>
    </content>
</Tab>
