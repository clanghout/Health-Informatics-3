<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab fx:controller="controllers.VisualizationController" text="Visualization" xmlns="http://javafx.com/javafx/8"
     xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <AnchorPane>
            <children>
                <VBox styleClass="visualization-default-dropdown" layoutX="14.0" layoutY="14.0">
                    <children>
                        <ComboBox fx:id="table" promptText="Table to use"/>
                        <ComboBox fx:id="visualization" promptText="Visualization"/>
                    </children>
                </VBox>
                <VBox fx:id="visualizationInput" styleClass="visualization-input-dropdown" layoutX="14.0" layoutY="86.0">

                </VBox>

                    <Button
                            styleClass="save-button"
                            layoutX="14.0"
                            layoutY="158.0"
                            onAction="#handleGraphCreateButtonAction"
                            text="Make graph" />

                <VBox fx:id="visualizationGraph" styleClass="visualization-graph" layoutX="164.0" layoutY="14.0">

                </VBox>
            </children>
        </AnchorPane>
    </content>
</Tab>
