<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" styleClass="main-box" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.wizard.XmlWizardController">
        <children>
            <VBox styleClass="datafiles-box">
                <Label>Data Files:</Label>
                <ListView
                        fx:id="datafiles"
                        styleClass="datafiles"/>
            </VBox>
            <HBox styleClass="path-box">
                <children>
                    <Label>Path</Label>
                    <TextField
                            fx:id="fileselectfield"
                            disable="true"
                            HBox.hgrow="SOMETIMES" />
                    <Button text="Browse"
                            onAction="#selectFile"/>
                </children>
            </HBox>
            <SplitPane styleClass="splitpane">
                <items>
                    <VBox styleClass="spaced-box">
                       <children>
                           <Label>Column specification:</Label>
                           <TableView fx:id="datacolumns"
                                   editable="true"/>
                           <HBox styleClass="import-box">
                               <TextField
                                       fx:id="columnName"/>
                               <ComboBox
                                       fx:id="columntype"/>
                               <Button text="Add column"
                                       onAction="#addColumnRow"/>
                           </HBox>
                           <CheckBox text="First row as table header"/>
                       </children>
                    </VBox>
                    <VBox styleClass="spaced-box">
                        <children>
                            <Label>
                                Plain textfile
                            </Label>
                            <HBox>
                                <Label> Starting line: </Label>
                                <TextField/>
                            </HBox>
                            <HBox>
                                <Label> Remove from end: </Label>
                                <TextField/>
                            </HBox>
                            <VBox>
                                <Label>Add metadata column: </Label>
                                <HBox styleClass="import-box">
                                    <TextField
                                            fx:id="metacolumnName"/>
                                    <ComboBox
                                            fx:id="metacolumntype"/>
                                </HBox>
                            </VBox>
                        </children>
                    </VBox>
                </items>
            </SplitPane>
            <HBox styleClass="spaced-box">
                <children>
                    <Button text="Create xml file"
                            onAction="#createXml"/>
                    <Button text="Cancel"/>
                </children>
            </HBox>
        </children>

<stylesheets>
    <URL value="@wizard.css" />
</stylesheets>

</VBox>
